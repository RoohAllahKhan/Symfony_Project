{% extends 'admin/adminpanel.html.twig' %}


{% block body %}
    {{ parent() }}
    <div class="container" style="margin-top: 5%">
        <table id="monthyReportTable" class="display">
            <thead>
            <tr>
                <td>Date</td>
                <td>No. of Present</td>
                <td>No. of Leave</td>
                <td>No. of Late</td>

            </tr>
            </thead>
            <tbody>
            {% for record in monthRecord %}
            <tr><td>{{ record['date'] }}</td>
                <td>{{ record['Present'] }}</td>
                <td>{{ record['Leave'] }}</td>
                <td>{{ record['Absent'] }}</td>
                {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td>Date</td>
                <td>No. of Present</td>
                <td>No. of Leave</td>
                <td>No. of Late</td>

            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/work.js') }}"></script>

{% endblock %}