{% extends 'content_base.html.twig' %}

{% block content_body %}




    {{ form_start(form) }}
        {% for employees in form.employees %}
            {{ form_row(employees.empName) }}
            {{ form_row(employees.department) }}
            {{ form_row(employees.salary) }}
            {{ form_row(employees.designation) }}
            {{ form_row(employees.boss)}}
        {% endfor %}
    {{ form_row(form.profile) }}
    {{ form_row(form.email) }}
    {{ form_row(form.password) }}

    <button type="submit" class="btn btn-primary">Add Employee</button>
    <button class="btn btn-warning" onclick="history.back()">Back</button>

    {{ form_end(form) }}





{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function () {

            $("#add_user_employees_0_boss").prepend("<option value='' selected>-- Select Boss --</option>");
            $("#add_user_employees_0_designation").prepend("<option value='' selected>-- Select Designation --</option>");

        })
    </script>
{% endblock %}